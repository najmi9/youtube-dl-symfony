{% extends 'base.html.twig' %}

{% block title %}Video Downloader{% endblock %}

{% block body %}

<div class="container mt-4">
    <h2 class="text-center mb-4 mt-4">Video Downloader</h2>

    <div class="ml-4 mr-4 p-4">
        <form name="url" method="post">
            <div class="mb-3">
                <label for="url_url" class="form-label required">Youtube URL</label>
                <input type="url" id="url_url" name="url" required="required" placeholder="https://youtube.com/video-id"
                inputmode="url" aria-describedby="url_url_help" class="form-control">
                <p id="url_url_help" class="form-text mb-0 help-text">
                    The video size must not be greater than 2 GB.
                </p>
            </div>
            <div class="form-group">
                <button class="btn btn-sm btn-primary" type="submit" data-type="video">
                    Download As Video
                </button>
                <button class="btn btn-success btn-sm" type="submit" data-type="audio">
                    Convert To Audio
                </button>
            </div>
        </form>
    </div>

    <div id="output" class="d-none" style="opacity: 0;">
        <div class="d-flex justify-content-center">
            <button class="btn btn-danger btn-sm" id="cancel-downloading">
                Cancel Downloading
            </button>
        </div>
    </div>

    <div class="frame d-flex justify-content-center"> </div>
</div>
{% endblock %}
